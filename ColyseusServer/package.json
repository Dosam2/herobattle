    "@colyseus/ws-transport": "^0.17.9",
    "@colyseus/monitor": "^0.17.7",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0"
  }
}
