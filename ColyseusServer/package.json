{
  "name": "herobattle-colyseus-server",
  "version": "1.0.0",
  "description": "HeroBattle 1:1 PVP Colyseus 서버 (Synology NAS Docker용)",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/main.ts",
    "start:dev": "ts-node-dev --watch \"src/**/*\" --respawn --transpile-only src/main.ts",
    "start:prod": "node dist/main.js"
